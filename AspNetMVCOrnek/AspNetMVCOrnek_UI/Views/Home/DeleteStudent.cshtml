@model AspNetMVCOrnek_EntityLayer.Entities.Student

@{
    ViewBag.Title = "DeleteStudent";
}

<h2>Öğrenci Silme İşlemi</h2>

@if (ViewBag.DeleteResult != null)
{
    <div class="alert alert-success">
        @ViewBag.DeleteResult
    </div>
}
else 
{
    <h3>Aşağıda bilgileri verilen öğrenciyi silmek istediğinize emin misiniz?</h3>
    <div>
        <hr />
        @using (Html.BeginForm())
        {
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.RegisteredDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RegisteredDate)

                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)

                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Surname)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Surname)
                </dd>


            </dl>


            @Html.AntiForgeryToken()

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-actions no-color">
                <input type="submit" value="SİL" class="btn btn-danger" /> |
                @Html.ActionLink("Listeye Geri Dön", "Index")
            </div>
        }
    </div>
}
